<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sweet="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    sweet:cardCornerRadius="5dp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <TextView
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Info Dispenser"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="#404040"
        android:textSize="16sp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="#E0E0E0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seri &amp; Tipe Dispenser"
            android:textSize="10sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/id_dispenser"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jenis_dispenser"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="#E0E0E0"/>

    <TextView
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Verifikasi"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="#404040"
        android:textSize="12sp" />

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Periode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>

        <TextView
            android:id="@+id/tanggalverifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="#0A0A0A"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Perbaikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>

        <TextView
            android:id="@+id/qtyperbaikan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#212121"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>

        <TextView
            android:id="@+id/qtymaintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#212121"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Verifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9E9E9E"/>

        <TextView
            android:id="@+id/qtyverifikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#212121"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="#E0E0E0"/>

    <TextView
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Kunjungan"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="#404040"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/list_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="wrap_content"

        android:layout_height="3dp"
        android:background="#E0E0E0"/>





    <LinearLayout
        android:id="@+id/linearbutton"
        android:gravity="center"
        android:visibility="visible"
        android:background="#ffffff"
        android:padding="16dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_weight="1"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cornerRadius="4dp"
            app:backgroundTint="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:text="Kembali"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#0A0A0A"
            android:textStyle="bold" />
    </LinearLayout>







</LinearLayout>
