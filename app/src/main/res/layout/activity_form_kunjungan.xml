<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_form_kunjungan.form_kunjungan">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:background="#ffffff"
            app:titleTextColor="#212121"
            android:layout_height="56dp"
            app:title="Form Kunjungan"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form Kunjungan Verifikasi Gallon &amp; Dispenser"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#404040"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depo"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#404040"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="#0F4C81"
            app:endIconMode="dropdown_menu">
            <AutoCompleteTextView
                android:id="@+id/pilihdepo"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:focusable="false"
                android:longClickable="false"
                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:hint="Pilih Depo"
                android:singleLine="true"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="442dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Pelanggan"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#404040"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxStrokeColor="#0F4C81"
            app:endIconMode="dropdown_menu">
            <AutoCompleteTextView
                android:id="@+id/pilihcustomer"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:hint="Pilih Kode Pelanggan"
                android:singleLine="true"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="442dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pelanggan"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#9E9E9E"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxBackgroundColor="#EDEDED"
            app:boxStrokeColor="#0F4C81">
            <EditText
                android:id="@+id/namapelanggan"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:focusable="false"
                android:longClickable="false"
                android:textColor="#0A0A0A"
                android:paddingLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:hint="Nama Pelanggan"
                android:singleLine="true"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="442dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Pelanggan"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#9E9E9E"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_below="@+id/text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            app:boxCornerRadiusBottomEnd="4dp"
            app:boxCornerRadiusBottomStart="4dp"
            app:boxCornerRadiusTopEnd="4dp"
            app:boxCornerRadiusTopStart="4dp"
            app:boxBackgroundColor="#EDEDED"
            app:boxStrokeColor="#0F4C81">
            <EditText
                android:id="@+id/alamatpelanggan"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:textColor="#0A0A0A"
                android:hint="Alamat Pelanggan"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:focusable="false"
                android:longClickable="false"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="442dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Verifikasi"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#404040"
            android:textSize="12sp" />

        <RadioGroup
            android:id="@+id/statusverifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:text="GALLON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0" />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:text="DISPENSER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        app:cornerRadius="4dp"
        app:backgroundTint="#0F4C81"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:text="Mulai"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textStyle="bold" />





</RelativeLayout>